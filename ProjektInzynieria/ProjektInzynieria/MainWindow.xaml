                        <Button Content="Zarządzaj pracownikami" Margin="13,71,10,0" VerticalAlignment="Top" Height="40" Background="{x:Null}" FontWeight="Bold" Command="{Binding ChangeTabCommand}" CommandParameter="3"/>
                        <Button Content="Zarządzaj reklamacjami" Margin="12,161,10,0" VerticalAlignment="Top" Height="40" Background="{x:Null}" FontWeight="Bold" Command="{Binding ChangeTabCommand}" CommandParameter="5"/>
                    </Grid>
                    <DataGrid ItemsSource="{Binding ListofEmployees}" AutoGenerateColumns="False" Margin="0,63,203.667,70">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding employeeID}" />
                            <DataGridTextColumn Header="First Name" Binding="{Binding EFirstName}" />
                            <DataGridTextColumn Header="Last Name" Binding="{Binding ELastName}" />
                            <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
                            <DataGridTextColumn Header="Email" Binding="{Binding Mail}" />
                            <!-- Dodaj pozostałe kolumny według potrzeb -->
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>
